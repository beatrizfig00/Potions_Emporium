<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="700.0" prefWidth="1280.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.TelaCaixaController">
   <children>
      <Label layoutX="26.0" layoutY="122.0" text="Deseja que sua encomenda seja entregue?" textFill="#ccb373">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font>
      </Label>
      <!-- Botões SIM/NÃO para entrega -->
      <Button fx:id="botaoSim" layoutX="514.0" layoutY="114.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="188.0" style="-fx-background-color: #ffffff; -fx-border-color: #ccb373;" text="SIM" textFill="#ccb373">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font>
      </Button>
      <Button fx:id="botaoNao" layoutX="515.0" layoutY="215.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="188.0" style="-fx-background-color: #ffffff; -fx-border-color: #ccb373;" text="NÃO" textFill="#ccb373">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font>
      </Button>

      <!-- Informações de pagamento -->
      <Label layoutX="26.0" layoutY="305.0" text="Total R$: " textFill="#ccb373">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font>
      </Label>
      <Label fx:id="totalLabel" layoutX="132.0" layoutY="301.0" prefHeight="37.0" prefWidth="146.0" style="-fx-border-color: #ccb373;" textFill="WHITE">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Label>
      <Label layoutX="307.0" layoutY="305.0" text="Desconto" textFill="#ccb373">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font>
      </Label>
      <Label fx:id="descontoLabel" layoutX="422.0" layoutY="301.0" prefHeight="37.0" prefWidth="146.0" style="-fx-border-color: #ccb373;" textFill="WHITE">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Label>

      <!-- Campos de pagamento (galeões, sicles, nuques) -->
      <ImageView fitHeight="45.0" fitWidth="48.0" layoutX="55.0" layoutY="422.0">
         <image>
            <Image url="@imagens/galeao.png" />
         </image>
      </ImageView>
      <TextField fx:id="galeaoTextField" layoutX="207.0" layoutY="413.0" prefHeight="45.0" prefWidth="54.0" style="-fx-background-color: #000000;" />

      <ImageView fitHeight="37.0" fitWidth="37.0" layoutX="61.0" layoutY="520.0">
         <image>
            <Image url="@imagens/sicle.png" />
         </image>
      </ImageView>
      <TextField fx:id="sicleTextField" layoutX="207.0" layoutY="516.0" prefHeight="45.0" prefWidth="54.0" style="-fx-background-color: #000000;" />

      <ImageView fitHeight="45.0" fitWidth="54.0" layoutX="49.0" layoutY="622.0">
         <image>
            <Image url="@imagens/nuque.png" />
         </image>
      </ImageView>
      <TextField fx:id="nuqueTextField" layoutX="207.0" layoutY="617.0" prefHeight="45.0" prefWidth="54.0" style="-fx-background-color: #000000;" />

      <!-- Botão de finalizar compra -->
      <Button fx:id="botaofinalizarCompra" layoutX="515.0" layoutY="618.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="188.0" style="-fx-background-color: #ffffff; -fx-border-color: #ccb373;" text="Finalizar Compra" textFill="#ccb373">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font>
      </Button>

      <!-- Troco -->
      <Label layoutX="307.0" layoutY="402.0" text="Troco" textFill="#ccb373">
         <font>
            <Font name="Arial Black" size="20.0" />
         </font>
      </Label>
      <Label fx:id="trocoLabel" layoutX="422.0" layoutY="402.0" prefHeight="37.0" prefWidth="146.0" style="-fx-border-color: #ccb373;" textFill="WHITE">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Label>
   </children>
</Pane>
